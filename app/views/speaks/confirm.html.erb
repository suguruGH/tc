<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @speak, url: speaks_path, local: true) do |form| %>
  <%= form.hidden_field :content %>

  <p>本文:<%= @speak.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @speak, url: new_speak_path, local: true, method: 'get') do |form| %> 
  <%= form.hidden_field :content %>
  <%= form.submit "もどる",name: 'back' %>
<% end %>